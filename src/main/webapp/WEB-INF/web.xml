<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>sgp</display-name>

	<servlet>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<servlet-class>
			dev.sgp.web.ListerCollaborateursController
		</servlet-class>

	</servlet>

	<servlet-mapping>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<url-pattern>/collaborateurs/lister</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>EditerCollaborateurController</servlet-name>
		<servlet-class>
			dev.sgp.web.EditerCollaborateurController
		</servlet-class>

	</servlet>

	<servlet-mapping>
		<servlet-name>EditerCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/editer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AddCollaboratorController</servlet-name>
		<servlet-class>
			dev.sgp.web.AddCollaboratorController
		</servlet-class>

	</servlet>

	<servlet-mapping>
		<servlet-name>AddCollaboratorController</servlet-name>
		<url-pattern>/collaborateurs/ajouter</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>SiteStatisticController</servlet-name>
		<servlet-class>
			dev.sgp.web.SiteStatisticController
		</servlet-class>

	</servlet>

	<servlet-mapping>
		<servlet-name>SiteStatisticController</servlet-name>
		<url-pattern>/collaborateurs/stats</url-pattern>
	</servlet-mapping>



	<filter>
		<filter-name>FrequentationFilter</filter-name>
		<filter-class>dev.sgp.filters.FrequentationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FrequentationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>